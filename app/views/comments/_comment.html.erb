<%= div_for(comment) do %>
        <p>
                <strong>
                        Há <%= time_ago_in_words(comment.created_at) %> atrás
                
                <br/>
                        <%= comment.user.name if comment.user %>:
                </strong>
                <%= h(comment.body) %>
        </p>
<%= link_to raw('<span class="glyphicon glyphicon-trash"></span>'), [@post, comment],
    :confirm => 'Are you sure?',
    :method => :delete  %>
</div>
       
<% end %>