<%= render 'pages/home' unless user_signed_in? %>
<% if user_signed_in? %>
<h1>Helps</h1>


  
   
    <% @posts.each do |post| %>
    <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= post.user.name if post.user %> </h3>
        </div>
   
        <div class="panel-body">

            <%= post.description %>
            
            <%= link_to 'Give a hand!' , post %> 
            <% if post.user == current_user %>
            <%= link_to 'Editar', edit_post_path(post) %>
            <%= link_to raw('<span class="glyphicon glyphicon-trash"></span>'), post, method: :delete, data: { confirm: 'Are you sure?' } %>
        
              <% end %>
        </div>
      </div>

<% end %>
<% end %>



